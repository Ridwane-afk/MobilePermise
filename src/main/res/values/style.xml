<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/material_dynamic_primary30</item>
        <item name="colorAccent">@color/material_dynamic_neutral30</item>


    </style>
    <!-- Base application theme. -->
    <style name="Theme.Hikify" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lightGreen</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/green</item>
        <item name="android:windowBackground">@color/creme</item>
        <item name="android:progressTint">@color/darkOrange</item>
        <item name="android:textColorHint">@color/lightGreen</item>
    </style>

    <style name="hikifyBtn">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/creme</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="hikifyImageBtn">
        <item name="android:background">@color/orange</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/creme</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="hikifyImageBtnDanger">
        <item name="android:background">@color/red</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/creme</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>